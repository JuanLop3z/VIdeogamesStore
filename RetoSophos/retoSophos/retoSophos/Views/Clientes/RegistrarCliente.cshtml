<!DOCTYPE html>

<html>
<head>
    <title>Cliente</title>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Registrar Cliente</h3>

                </div>

                <div class="card-body">
                    <form action="@Url.Action("RegistrarCliente","Clientes")" method="post">

                        <!--Espacio de Escritura-->
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="number" name="Identificacion" class="form-control" placeholder="Identificacion">

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="text" name="Nombres" class="form-control" placeholder="Ingrese su nombre">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="number" name="Edad" class="form-control" placeholder="Ingrese su Edad">
                        </div>

                        <!--Alertas-->
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>

                        }

                        <!--Buttons-->
                        <div class="form-group">
                            <input type="submit" value="Ingresar" class="btn float-right login_btn">
                        </div>
                        <div class="form-group">
                            <input type="reset" value="Borrar" class="btn float-left btn_danger">
                        </div>
                    </form>
                </div>

            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-center links">
                <a href="@Url.Action("listarClientes","Clientes")">Listado de Clientes</a>
            </div>
        </div>
    </div>




    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>
